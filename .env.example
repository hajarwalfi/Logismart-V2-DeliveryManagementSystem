# ==================================
# Logismart Docker Environment Variables
# ==================================

# ==================================
# Database Configuration
# ==================================
DB_NAME=logismart_db
DB_USER=logismart
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# ==================================
# Application Configuration
# ==================================
APP_PORT=8080

# ==================================
# JWT Configuration
# ==================================
# Generate a secure secret: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_min_256_bits_here
JWT_EXPIRATION=86400000

# ==================================
# Logging Configuration
# ==================================
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG
